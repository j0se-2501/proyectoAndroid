<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".UserActivity">

    <Button
        android:id="@+id/motorButton"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:layout_marginBottom="32dp"
        android:text="motorButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/userEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="User:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.703"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="92dp"
        android:layout_height="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imagen_fondo_silueta"
        android:layout_width="424dp"
        android:layout_height="603dp"
        android:alpha="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/transmisionButton"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:layout_marginEnd="16dp"
        android:text="transmisionButton"
        app:layout_constraintBottom_toTopOf="@+id/sobrealimentacionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914" />

    <Button
        android:id="@+id/frenosButton"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="68dp"
        android:text="frenosButton"
        app:layout_constraintBottom_toTopOf="@+id/motorButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/llantasButton"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:layout_marginBottom="68dp"
        android:text="llantasButton"
        app:layout_constraintBottom_toTopOf="@+id/motorButton"
        app:layout_constraintEnd_toStartOf="@+id/frenosButton"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/suspensionButton"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:layout_marginBottom="16dp"
        android:text="suspensionButton"
        app:layout_constraintBottom_toTopOf="@+id/llantasButton"
        app:layout_constraintEnd_toStartOf="@+id/carroceriaButton"
        app:layout_constraintHorizontal_bias="0.365"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/carroceriaButton"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:text="carroceriaButton"
        app:layout_constraintBottom_toTopOf="@+id/frenosButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/neumaticosButton"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:layout_marginBottom="24dp"
        android:text="neumaticosButton"
        app:layout_constraintBottom_toTopOf="@+id/suspensionButton"
        app:layout_constraintEnd_toStartOf="@+id/sobrealimentacionButton"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/electronicaButton"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:text="electronicaButton"
        app:layout_constraintBottom_toTopOf="@+id/neumaticosButton"
        app:layout_constraintEnd_toStartOf="@+id/transmisionButton"
        app:layout_constraintHorizontal_bias="0.378"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.914" />

    <Button
        android:id="@+id/sobrealimentacionButton"
        android:layout_width="179dp"
        android:layout_height="76dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:text="sobrealimentacionButton"
        app:layout_constraintBottom_toTopOf="@+id/carroceriaButton"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
