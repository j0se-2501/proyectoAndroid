<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".UserActivity"
    tools:openDrawer="start"
    >

    <ImageView
        android:id="@+id/imagen_fondo_silueta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.15"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"
         />
    <ScrollView
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="ifContentScrolls"
        android:scrollbars="vertical"
        android:id="@+id/scrollView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".UserActivity">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="92dp"
                android:layout_height="84dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/userEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="User:"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="168dp"
                android:layout_height="129dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="false"
                android:background="#00FFFFFF"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:srcCompat="@drawable/motor" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="168dp"
                android:layout_height="129dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="false"
                android:background="#00FFFFFF"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@+id/imageButton"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:srcCompat="@drawable/transmision" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="165dp"
                android:layout_height="23dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:text="Motor"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="165dp"
                android:layout_height="23dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:text="Transmisión"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageButton"
                app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="168dp"
                android:layout_height="129dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="false"
                android:background="#00FFFFFF"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:srcCompat="@drawable/sobrealimentacion" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="168dp"
                android:layout_height="129dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="false"
                android:background="#00FFFFFF"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@+id/imageButton3"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/neumaticos" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="165dp"
                android:layout_height="23dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:text="Sobrealimentación"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton3" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="165dp"
                android:layout_height="23dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:text="Neumáticos"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageButton3"
                app:layout_constraintTop_toBottomOf="@+id/imageButton4" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="168dp"
                android:layout_height="129dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="false"
                android:background="#00FFFFFF"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:srcCompat="@drawable/llantas" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="168dp"
                android:layout_height="129dp"
                android:layout_margin="10dp"
                android:layout_marginStart="16dp"
                android:adjustViewBounds="false"
                android:background="#00FFFFFF"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@+id/imageButton5"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:srcCompat="@drawable/suspension" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="165dp"
                android:layout_height="23dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:text="Llantas"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton5" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="165dp"
                android:layout_height="23dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:text="Suspensión"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageButton5"
                app:layout_constraintTop_toBottomOf="@+id/imageButton6" />


            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="168dp"
                android:layout_height="129dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="false"
                android:background="#00FFFFFF"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                app:srcCompat="@drawable/frenos" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="168dp"
                android:layout_height="129dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="false"
                android:background="#00FFFFFF"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toEndOf="@+id/imageButton7"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:srcCompat="@drawable/carroceria" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="165dp"
                android:layout_height="23dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:text="Frenos"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton7" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="165dp"
                android:layout_height="23dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:text="Carrocería"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageButton7"
                app:layout_constraintTop_toBottomOf="@+id/imageButton8" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="168dp"
                android:layout_height="129dp"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="false"
                android:background="#00FFFFFF"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView8"
                app:srcCompat="@drawable/electronica" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="166dp"
                android:layout_height="216dp"
                android:layout_margin="10dp"
                android:text="Electrónica"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton9" />

            <Button
                android:id="@+id/buttonPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="BotonPerfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.831"
                app:layout_constraintStart_toEndOf="@+id/userEmailTextView"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonFavoritos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:text="Favoritos"
                app:layout_constraintStart_toEndOf="@+id/imageButton9"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <Button
                android:id="@+id/buttonCarrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="50dp"
                android:text="Carrito"
                app:layout_constraintStart_toEndOf="@+id/imageButton9"
                app:layout_constraintTop_toBottomOf="@+id/buttonFavoritos" />

    <Button
        android:id="@+id/buttonAbrirDrawer"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:text="Abrir Drawer"
        app:layout_constraintBottom_toBottomOf="@+id/buttonPerfil"
        app:layout_constraintEnd_toStartOf="@+id/buttonPerfil"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/userEmailTextView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
    <!-- Cajón de navegación -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:gravity="start"
        android:layout_gravity="start">

        <!-- Contenido personalizado del cajón de navegación -->
        <include
            android:id="@+id/app_bar_nav_drawer"
            layout="@layout/app_bar_nav_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:headerLayout="@layout/nav_header_nav_drawer"
            app:menu="@menu/activity_main_drawer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>